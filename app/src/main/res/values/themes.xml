<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaManagement" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_accent</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/color_primary</item>

        <item name="android:windowDisablePreview">true</item>

        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/color_primary</item>
        <item name="android:background">@color/color_primary</item>

        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>


    <style name="Dashboardtheme" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ffffff</item>

        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <style name="Dashboard_style" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/color_primary</item>

        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <style name="AppCommonFields" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_border_round_rectangle_10cr</item>
        <item name="android:paddingTop">@dimen/common_field_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/common_field_padding_top_bottom</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">@color/ash</item>
        <item name="android:fontFamily">@font/cosmic_san_ms</item>
        <item name="android:textSize">16dp</item>
        <item name="maxLines">1</item>
    </style>

    <style name="AppCommonDisplayFields" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_border_round_rectangle_10cr</item>
        <item name="android:paddingTop">@dimen/common_field_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/common_field_padding_top_bottom</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">@color/ash</item>
        <item name="android:fontFamily">@font/cosmic_san_ms</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="maxLines">1</item>
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
    </style>


    <style name="AppCommonLabelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textColorHint">@color/ash</item>
        <item name="android:fontFamily">@font/cosmic_san_ms</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="maxLines">1</item>
        <item name="android:clickable">false</item>
    </style>


    <style name="AppCommonBtnStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/shape_brown_button_bg</item>
        <item name="android:textColor">@color/common_btn_color_list</item>
    </style>

</resources>